<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhujiang.myapplication.view.QRCodeActivity">


    <com.example.zhujiang.myapplication.view.scroll.HorizontalFeatureScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_bg"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="991px"
            android:layout_height="1848px"
            android:layout_gravity="center">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@mipmap/img"
                android:elevation="1dp"
                android:translationZ="1dp"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="#1268cf"
                android:textSize="16sp"/>

        </FrameLayout>



    </com.example.zhujiang.myapplication.view.scroll.HorizontalFeatureScrollView>


</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhujiang.myapplication.runText.RunTextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#a12382">

            <com.example.zhujiang.myapplication.runText.RxTextViewVertical
                android:id="@+id/tv_run"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#789123"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="伸缩" />

    </LinearLayout>


    <com.example.zhujiang.myapplication.runText.RunTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#12389a"
        android:layout_margin="20dp"></com.example.zhujiang.myapplication.runText.RunTextView>


    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/icon_face_nomal"/>

    <com.example.zhujiang.myapplication.view.CustomWebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#789123"/>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhujiang.myapplication.fillblack.FillBlackActivity">


    <ImageView
        android:id="@+id/iv_chat_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#A7a132"
        android:src="@mipmap/app_guard_chat_btn_press"/>

    <ImageView
        android:id="@+id/iv_chat_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#345123"
        android:src="@mipmap/app_guard_chat_btn_normal"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@mipmap/app_guard_chat_btn_press"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#A7a132"
            android:elevation="10dp"
            android:outlineProvider="background"
            android:layout_margin="30dp"
            android:src="@mipmap/app_guard_chat_btn_press"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationZ="10dp"
            android:elevation="10dp"
            android:outlineProvider="background"
            android:layout_margin="30dp"
            android:src="@mipmap/app_guard_chat_btn_press"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#A7a132"
            android:translationZ="10dp"
            android:elevation="20dp"
            android:layout_margin="30dp"
            android:src="@mipmap/app_guard_chat_btn_press"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#A7a132"
            android:elevation="20dp"
            android:translationZ="20dp"
            android:layout_margin="30dp"
            android:src="@mipmap/app_guard_chat_btn_press"/>

    </LinearLayout>



</FrameLayout>
